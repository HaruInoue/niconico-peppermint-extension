// より良い新着通知表示
html.PM-HighlightNewNotice {
    .nico-CommonHeaderRoot .common-header-kolmxm {
        background: transparent url("data:image/svg+xml;base64,") no-repeat !important;
        background-size: 2% !important;
        background-position: left 10px top 10px !important;
        border-bottom: 1px solid var(--accent2) !important;
    }
    .nico-CommonHeaderRoot .common-header-kolmxm:hover {
        background: rgba(255,255,255,0.1) url("data:image/svg+xml;base64,") no-repeat !important;
        background-size: 2% !important;
        background-position: left 10px top 10px !important;
        border-bottom: 1px solid var(--accent2) !important;
    }
}
// サポーターボタンを隠す
html.PM-HideSupporter {
    .NC-CreatorSupportAccepting {
        display: none;
    }
}
// ホームの幅を揃える
html.PM-AlignPageWidth {
    .TopPage-section,.common-header-654o26 {
        min-width: 1024px;
        max-width: 1024px;
        width: 1024px !important;
    }
}
// 勧誘を隠す
html.PM-HideAppeal {
    .FollowAppeal, .SeekBarStoryboardPremiumLink-content, .PreVideoStartPremiumLinkContainer, .CreatorSupportAppealContainer {
        display:none;
    }
}