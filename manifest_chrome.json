{
    "description": "ニコニコ動画をちょっとクールにします。",
    "manifest_version": 3,
    "name": "Niconico-PepperMint",
    "version": "0.3",


    "content_scripts": [
        {
            "matches": ["*://*.nicovideo.jp/*"],
            "js": ["js/jquery-3.6.3.min.js","js/forall.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://www.nicovideo.jp/video_top*"],
            "js": ["js/video_top.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.nicovideo.jp/ranking"],
            "js": ["js/ranking.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.nicovideo.jp/search/*", "*://www.nicovideo.jp/tag/*", "*://www.nicovideo.jp/mylist_search/*"],
            "js": ["js/searchpage.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://www.nicovideo.jp/watch/*"],
            "js": ["js/watch.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.nicovideo.jp/watch/*"],
            "js": ["js/watch_idle.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [{
        "resources": [
            "pagemod/*"
        ],
        "matches": [
            "*://*.nicovideo.jp/*"
        ]
    }],

    "action": {
        "browser_style": true,
        "default_popup": "popup/option.html",
        "default_icon": {
            "16": "icons/page-16.png",
            "32": "icons/page-32.png"
        },
        "default_title": "Niconico-PepperMint"
    },
    "permissions": ["storage"],

    "applications": {
        "gecko": {
            "id": "niconicopeppermint@example.com"
        }
    }
}
