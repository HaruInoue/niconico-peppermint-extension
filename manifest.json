{
    "manifest_version": 2,
    "name": "Niconico-PepperMint",
    "short_name": "PepperMint",
    "description": "ニコニコ動画をちょっとクールにする拡張機能",
    "version": "0.3.1",
    "version_name": "0.3.1 rc",
    "developer": {
        "name": "CYakigasi"
    },

    "homepage_url": "https://github.com/castella-cake/niconico-peppermint-extension",
    "icons": {
        "64": "icons/peppermint-logo-64.png"
    },

    "content_scripts": [
        {
            "matches": ["*://*.nicovideo.jp/*"],
            "js": ["js/jquery-3.6.3.min.js","js/forall.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://*.nicovideo.jp/*"],
            "js": ["js/forall_waitdom.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://dic.nicovideo.jp/*"],
            "js": ["js/nicopedia.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.nicovideo.jp/video_top*"],
            "js": ["js/video_top.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.nicovideo.jp/ranking*"],
            "js": ["js/ranking.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.nicovideo.jp/search/*", "*://www.nicovideo.jp/tag/*", "*://www.nicovideo.jp/mylist_search/*"],
            "js": ["js/searchpage.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://www.nicovideo.jp/watch/*"],
            "js": ["js/watch.js"],
            "run_at": "document_end"
        },
        {            
            "matches": ["*://www.nicovideo.jp/watch/*"],
            "js": ["js/watch_first.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://www.nicovideo.jp/watch/*"],
            "js": ["js/watch_idle.js"],
            "run_at": "document_idle"
        },
        {
            "matches": ["*://*.nicovideo.jp/series/*"],
            "js": ["js/series.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "pagemod/*"
    ],

    "browser_action": {
        "browser_style": true,
        "default_popup": "popup/option.html",
        "default_icon": {
            "16": "icons/peppermint-logo-16.png",
            "32": "icons/peppermint-logo-32.png",
            "64": "icons/peppermint-logo-64.png"
        },
        "default_title": "Niconico-PepperMint"
    },
    "permissions": [
        "storage"
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "niconico-peppermint@cyakigasi.net",
            "update_url": "https://www.cyakigasi.net/peppermint/updates.json"
        }
    }
}
